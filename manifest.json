{
  "manifest_version": 3,
  "name": "HourlyLogger",
  "description": "Prompts you every hour to log your work and view your activity summary.",
  "version": "1.0",
  "permissions": ["storage", "notifications", "alarms"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon.png"
  }
}
